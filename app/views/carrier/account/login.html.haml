- content_for(:title, 'ShipX Carrier - Login')

.row
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title Carrier Sign in
      .panel-body
        = form_tag do
          .form-group
            = label_tag 'email'
            = email_field_tag 'email', nil, autofocus: true, class: ['form-control']
          .form-group
            = label_tag 'password'
            = password_field_tag 'password', nil, autocomplete: "off", class: ['form-control']
          %div= submit_tag "Sign in", class: ['btn','btn-primary']