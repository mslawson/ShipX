= form_for @credit_application do |f|
  - if @credit_application.errors.any?
    .alert.alert-danger
      %b
        = pluralize(@credit_application.errors.count, "error")
        prohibited this application from being submitted:
      %ul
        - @credit_application.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :company_name
    = f.text_field :company_name, class: ['form-control']
  .form-group
    = f.label :alternate_name
    = f.text_field :alternate_name, class: ['form-control']
  .form-group
    = f.label :contact_name
    = f.text_field :contact_name, class: ['form-control']
  .form-group
    = f.label :title
    = f.text_field :title, class: ['form-control']
  .form-group
    = f.label :phone_number
    = f.text_field :phone_number, class: ['form-control']
  .form-group
    = f.label :company_address_1
    = f.text_field :company_address_1, class: ['form-control']
  .form-group
    = f.label :company_address_2
    = f.text_field :company_address_2, class: ['form-control']
  .form-group
    = f.label :city
    = f.text_field :city, class: ['form-control']
  .form-group
    = f.label :state
    = f.text_field :state, class: ['form-control']
  .form-group
    = f.label :zip_code
    = f.text_field :zip_code, class: ['form-control']
  .form-group
    = f.label "Requested Credit Line"
    = f.text_field :requested_credit_line, class: ['form-control']
  .form-group
    = f.submit "Apply", class: ['btn', 'btn-primary']
